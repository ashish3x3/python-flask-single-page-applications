{% raw %}
<div class="row no-print" id='marketing-coupons'>
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
            	<div class="row">
            		<div class="col-md-6">
            			Coupons
            		</div>
            	</div>
                
            </header>
            <div class="panel-body">
                <div class="col-lg-12 col-sm-12" style="font-size:30px;">
                    <div class="col-md-10 col-sm-10">
                        <button class="btn btn-warning btn-refresh" type="button" can-click="staffRefresh" title="Refresh">
                            <i class="fa fa-refresh"></i> Refresh
                        </button>
                    </div>
                    <div class="col-md-2 col-sm-2">
                        <button class="btn btn-primary" can-click="addCoupon">Add Coupon</button>
                    </div>
                </div>
            </div>


            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="fa fa-user"></i> Name</th>
                        <th>Alias</th>
                        <th>Start Date</th>
                        <th>Expiry Date</th>
                        <th>Status</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                {{#each couponData}}
                    <tr index="{{str_id}}" style="cursor: pointer" arr-index="{{@index}}">
                        <td>
                        	<a href="javascript:void(0)" can-click="editCoupon">{{#capitalize data.name}}{{/capitalize}}</a>
                        </td>
                        <td>{{alias_coupon}}</td>
                        <td>{{start_date}}</td>
                        <td>{{expiry_date}}</td>
                        <td>
                            {{#if is_active}}
                                <span class="label label-success label-mini">Active</span>
                            {{else}}
                                <span class="label label-danger label-mini">Inactive</span>
                            {{/if}}
                        </td>
                        <td>
                            <p>
                                <span class="label label-primary label-mini">max {{data.max}}</span>
                            </p>
                            <p>
                                <span class="label label-success label-mini">count {{data.count}}</span>
                            </p>
                            <p>
                                <span class="label label-danger label-mini">amount {{data.amount}}
                            </p>
                             <p>
                                <span class="label label-primary label-mini">percentage {{data.percentage}}
                            </p>
                        </td>
                    </tr>
                {{/each}}
                {{#isEmpty userData}}
                    <tr>
                        <td colspan="6" style="text-align:center;">Oops... no data found!!!</td>
                    </tr>
                {{/isEmpty}}
                </tbody>
            </table>
            <div class="panel-body block-load-more">
                <div class="row col-lg-12 load-more" style="text-align:center">
                    <button class="btn btn-primary btn-block" can-click="loadMoreRows" data-loading=""><i class="fa fa-repeat"></i></button>
                </div>
            </div>
        </section>
    </div>
</div>


<div class="modal fade" id="add-marketing-coupon-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-lg-6">
                        <h4 class="modal-title">Add Coupon</h4>
                    </div>
                    <div class="col-lg-6 text-right">
                        <button data-dismiss="modal" class="btn btn-primary btn-sm" type="button" can-click="closeCouponModal">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                
            </div>
            <div class="modal-body">
                <form action="" id="add-coupon-form" method="post">
                    <div class="input-group m-bot15">
                        <span class="input-group-addon">Name</span>
                        <input type="text" required class="form-control" name="name" value="{{selectedCoupon.data.name}}" can-keyup="couponDataChange">
                    </div>
                    <div class="m-bot15">
                        <input type="text" name="alias-coupon" class="add-alias-input" placeholder="Add Alias Coupon">
                    </div>
                    <div class="input-group m-bot15">
                        <span class="input-group-addon">Start date</span>
                        <input type="text" required class="form-control start-date" name="start-date">
                    </div>
                    <div class="input-group m-bot15">
                        <span class="input-group-addon">Expiry date</span>
                        <input type="text" required class="form-control expiry-date" name="expiry-date">
                    </div>
                    <div class="input-group m-bot15">
                        <span class="input-group-addon">Status</span>
                        <select class="form-control" name="is_active" can-change="couponDataChange">
                            <option value="active" {{#if selectedCoupon.is_active}}selected{{/if}}>Active</option>
                            <option value="inactive" {{#ifNot selectedCoupon.is_active}}selected{{/ifNot}}>Inactive</option>
                        </select>
                    </div>
                </form>
            </div>

            <div class="panel-footer text-right">
                <button type="button" class="btn btn-danger" can-click="saveCoupon">Save</button>
            </div>
        </div>
    </div>
</div>

{% endraw %}