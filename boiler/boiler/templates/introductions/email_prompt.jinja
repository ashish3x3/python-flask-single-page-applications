{% set show_footer = false %}
{% set modal_class = 'email-prompt-modal' %}
{% extends 'layout/modal.jinja' %}

{% block content %}
<form class="form-horizontal introduce-form js-track-analytics" role="form" action="/introductions/introduce/emailprompt" method="POST">
    <div class="content">
        <p class="js-remove-on-success">Thank you for the introduction. You have won 100 points. Please enter your email id and phone number to redeem points.</p>
        <div class="form-group js-remove-on-success">
            <label class="col-sm-2 control-label" for="introduce_form_email" >
                Email &nbsp;<span class="text-danger">*</span>
            </label>
            <div class="col-sm-10">
                <input required="required" type="email" class="form-control" placeholder="Email" id="introduce_email" name="introduce_email">
            </div>
        </div>
        <div class="form-group js-remove-on-success">
            <label class="col-sm-2 control-label" for="introduce_form_email">Phone</label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" placeholder="Phone" id="introduce_phone" name="introduce_phone">
            </div>
        </div>
        <div class="form-group hide js-error-message-container">
            <div class="col-sm-10 col-sm-push-2">
                <label class="js-error-message"></label>
            </div>
        </div>
    </div>
    <div class="modal-footer js-remove-on-success">
        <small class="pull-left text-left col-md-10 padding-muted"><em>Note: You cannot redeem points without providing email id and phone number</em></small>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
{% endblock content %}