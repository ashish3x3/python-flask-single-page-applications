<head>
    {% include 'elements/head.jinja' %}
</head>
<body>

    {#--top navigation start--#}

    {#--top navigation end--#}
    <main class="main-container {{'landing-container' if section and section.sub == 'login'}} margin-top-muted">
        {% if not isCareerSite %}
            <div class="banner-careertab text-center">
                <img src=" {{ mainLogoUrl or '/static/icons/210x36.png' }}" alt="MyParichay" title="MyParichay" />
            </div>
        {% endif %}
        {#--content start-#}
        {% block main_content %}
            <div class="container" id="maincontainer">
               {% block content %} {% endblock content  %}
            </div>
        {% endblock main_content  %}
        {#--content end-#}
    </main>

    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
    </div>
    <div class="loader-lg tx-white popupLoader hidden" id="modal-loader">
        <i class="glyphicon glyphicon-spinner glyphicon-spin"></i>
        <div class="text-muted" style="font-size:12px;"></div>
    </div>
    {#--footer start--#}
    {% if isCareerSite %}
        {% extends 'elements/postscript_csite.jinja' %}
    {% else %}
        {% extends 'elements/postscript.jinja' %}
    {% endif %}
 {#--footer end--#}
</body>
</html>

