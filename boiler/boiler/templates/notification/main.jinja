{% if not request.is_xhr %}
    {% extends "layout/defaultlayout.jinja" %}
{% else %}
    {% extends "layout/ajax_content.jinja" %}
{% endif %}

{% block content %}
    <div class="row">
        {#--MAIN CONTENT---#}
        <div class="{{ section.main }}_{{ section.sub }}">
            <div class="col-md-9 col-md-push-3">
                <section class="panel panel-default">
                    {#--HEADING PART-#}
                    <header class="panel-heading">
                        <h4>{{ section.title }}</h4>
                    </header>
                    <div id="subcontainer" class="panel-body panel-padding-muted">
                        {% block search_result_block %} {% endblock search_result_block %}
                    </div>
                </section>
            </div>

            <aside class="col-md-3 col-md-pull-9">
               {% include ('notification/sidebar.jinja') %}
            </aside>
        </div>
    </div>
{% endblock content %}