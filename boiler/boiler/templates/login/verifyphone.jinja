{% extends "layout/defaultlayout.jinja" %}

{% block screen_name %}
<div class="navbar-brand " href="">
    <img class="header_image_icon" src="/static/img/schedule_icon.png"><span>Phone Verification</span>
</div>
{% endblock screen_name %}



{% block main_content %}

<div class="row">

  

<div class="col-md-8 order-page">
  <div id="applyCoupon" class="col-md-8">
    <div id="coupon-hero">  
        <h3>Verify your phone for better services</h3></br>
    {% if not session.get('otp','') %}
            <div id="verifyPhone">
              <form id="verifyphone" method="post" action="">
                      <div id="hide_on_otp">
                      <!--<input type="text" name="phone_num" id="phone_num" placeholder="10 digit phone number" required></input>-->
                         <input type="text" name="phone_num" id="phone_num" placeholder="10 digit phone number" maxlength="10" minlength="10" onkeypress="return isNumber(event)" required></input></br>
                        </br>
                          <button  id="send_otp" type="submit" data-ember-action="13" class="primary" style="position:relative;" value="Save" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Sending otp">Send OTP</button>
                      </div>
                </form>
              </div>
      {% else %}
            <div id="verifyOtp">
              <form id="verifyotp" method="post" action="">
                      <div id="show_on_otp">
                          <!--<input type="text" name="otp" id="otp" placeholder="5 digit key" required></input>-->
                            <input type="text" name="new_phone_num" id="new_phone_num" value="{{session.get('phone')}}" maxlength="10" minlength="10" onkeypress="return isNumber(event)" disabled="disabled" required></input>
                          </br></br>
                          <input type="text" name="otp" id="otp" placeholder="5 digit key" maxlength="5" minlength="5"onkeypress="return isNumber(event)" required></input></br>

                        </br>
                          <button  id="verify_otp" type="submit" data-ember-action="13" class="primary" style="position:relative;" value="Save" data-loading-text="<i class='fa fa-spinner fa-spin'></i> verifying otp">Verify OTP</button>
                          </br></br>
                          <a href="/edit_phone" >edit phone</a> </br><a href="/validate_phone_otp">resend code</a>
                      </div>
                </form>
              </div>
       {% endif %}
      
    </div>  
  </div>
</div>

</div>  

</div>



</div>

<script type="text/javascript">
  function isNumber(evt) {
    evt = (evt) ? evt : window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode;
    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
        return false;
    }
    return true;
}
</script>
{% endblock main_content %}

