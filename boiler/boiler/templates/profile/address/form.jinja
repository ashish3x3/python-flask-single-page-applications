{% block main_content %}

<div class="col-md-8">

        <header>
          <h2><a id="ember854" class="ember-view" href="/settings/addresses">â€¹ My Addresses</a></h2>
        </header>
        <form>
          <fieldset>
            <div class="input-group">
              <label class="control-label" for="addAddressAddress">Address</label>
              <input id="addAddressAddress" class="ember-view ember-text-field" placeholder="Address" type="text" autocomplete="off">
