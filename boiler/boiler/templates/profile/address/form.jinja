            </div>

            <div class="input-group">
            <select>           
              <label class="control-label" for="addLocationName">Location</label>
              <option id="ember869" class="ember-view" value="Home">Home</option>
              <option id="ember870" class="ember-view" value="Office">Office</option>
            </select>           

            </div>

            <div class="input-group">
              <label class="control-label" for="addAddressNote">Notes</label>
              <input id="addAddressNote" class="ember-view ember-text-field" placeholder="Note (optional)" type="text">
            </div>
          </fieldset>
        </form>

        <div class="submit-form">
          <button data-ember-action="14" class="primary">
             Add Address
          </button>
        </div>

      </div>


{% endblock main_content %}